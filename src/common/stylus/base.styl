@import "variable.styl"

body, html
  line-height: 1
  font-family: 'PingFang SC', 'STHeitiSC-Light', 'Helvetica-Light', arial, sans-serif, 'Droid Sans Fallback'
  user-select: none
  -webkit-tap-highlight-color: transparent
  background: $color-background
  color: $color-text
.red
  color red
input[type="text"],input[type="password"],select,textarea
    background-color: #fff;
    background-image: none;
    border-radius: 4px;
    border: 1px solid #bfcbd9;
    box-sizing: border-box;
    color: #1f2d3d;
    display: inline-block;
    font-size: inherit;
    height: 36px;
    line-height: 1;
    outline: none;
    padding: 3px 10px;
    transition: border-color .2s cubic-bezier(.645,.045,.355,1);
    width: 100%;
    &:focus
      border-color #20a0ff;

@media (-webkit-min-device-pixel-ratio: 1.5),(min-device-aspect-ratio: 1.5)
 .border-1px
  &::after
    -webkit-transform : scaleY(0.7)
    transform : scaleY(0.7)

@media (-webkit-min-device-pixel-ratio: 2),(min-device-aspect-ratio: 2)
 .border-1px
  &::after
    -webkit-transform : scaleY(0.5)
    transform : scaleY(0.5)

/* 表单验证报错信息提示 */
.error-alert
  position: fixed
  top: 50%
  left: 50%
  min-width: 90px
  transform: translate(-50%,-50%)
  z-index: 2999
  padding: 15px 20px
  text-align: center
  background: rgba(0, 0, 0, .7)
  border-radius: 10px
  font-size: 0
  color: #fff
  &.alert-show {
    animation: show 2.5s;
  }
  .errorAlertIcon
    display: block
    font-size: 34px
    margin-bottom: 12px
  .errorAlertCon
    font-size: 14px
  @keyframes show {
    0% {
      opacity: 0
    }
    15% {
      opacity: 1
    }
    70% {
      opacity: 1
    }
    88% {
      display: none
    }
    100% {
      opacity: 0
      display: none
    }
  }
/* 弹出提示框 */
.fadeTip
  position: fixed
  top: 10%
  left: 50%
  min-width: 80%
  transform: translate(-50%,-50%)
  z-index: 2999
  padding: 10px
  text-align: center
  background: rgba(0, 0, 0, .7)
  border-radius: 10px
  font-size: 0
  color: #fff
  &.fadeMsg-show {
    animation: show 2.5s;
  }
  .fadeMsgIcon
    display: inline-block
    font-size: 22px
    vertical-align: top
    color: $color-title
  .fadeTipCon
    position: relative
    font-size: 14px
    margin-left: 10px
    top: 4px
  @keyframes show {
    0% {
      opacity: 0
      transform: translate(-50%,-50%)
    }
    15% {
      opacity: 1
      transform: translate(-50%,-30%)
    }
    70% {
      opacity: 1
      transform: translate(-50%,-30%)
    }
    88% {
      display: none
      transform: translate(-50%,-100%)
    }
    100% {
      opacity: 0
      display: none
      transform: translate(-50%,-100%)
    }
  }